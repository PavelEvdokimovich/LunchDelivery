@model IEnumerable<WEB.MVC5.Models.User>

@{
    ViewBag.Title = "Контактная информация";
}
<h2>@ViewBag.Title</h2>
<hr />
<h4>@ViewBag.Message приложения</h4>

@foreach (var item in Model)
{
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">@Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.LastName)</h3>
		</div>
		<div class="panel-body">
			@if (item.PhotoData != null)
			{
				<div class="pull-left" style="margin-right: 10px">
					<img class="img-thumbnail" width="100" height="100" src="@Url.Action("GetPhoto", "Profile", new { item.UserId })" />
				</div>
			}
			<label>Телефон:</label><br />
			@Html.DisplayFor(modelItem => item.Phone)
			<br />
			<label>Email:</label><br />
			<a href="mailto:@Html.DisplayFor(modelItem => item.Email)">@Html.DisplayFor(modelItem => item.Email)</a>
			<br />
		</div>
	</div>
}
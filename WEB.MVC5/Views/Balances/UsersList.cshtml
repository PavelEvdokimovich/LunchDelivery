@model IEnumerable<WEB.MVC5.Models.User>

@{
	ViewBag.Title = "Список пользователей";
}

<h2>Список пользователей</h2>
<br />
<table class="table table-hover">
	<tr class="info">
		<th>
			Фото
		</th>
		<th>
			Данные пользователя
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		if (item.Email != Context.User.Identity.Name)
		{
			<tr>
				<td>
					@if (item.PhotoData != null)
					{
						<div class="pull-left" style="margin-right: 10px">
							<img class="img-thumbnail" width="100" height="100" src="@Url.Action("GetPhoto", "Profile", new { item.UserId })" />
						</div>
					}
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LastName)
					@Html.DisplayFor(modelItem => item.Name)
					<br />
					@Html.DisplayFor(modelItem => item.Phone)
					<br />
					@Html.DisplayFor(modelItem => item.Email)
				</td>

				<td>
					@Html.ActionLink("Поделиться балансом", "GiveBalance", new { id = @item.UserId })
				</td>
			</tr>
		}
	}

</table>
<a href="/Balances/MyBalance" title="Вернуться назад"><img class="img-circle" width="50" height="50" src="~/Content/img/back_blue.png" /></a>
